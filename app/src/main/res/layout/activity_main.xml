<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#121212"
              android:padding="16dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Spinner
            android:id="@+id/coinSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"/>


    <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:background="#f5f5f5"
    android:layout_margin="16dp"
    android:elevation="4dp" />


    <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@drawable/spinner_background"
            android:textColor="#FFCC00"
            android:textSize="16sp"
            android:text="@string/pr_xima_atualiza_o_em_30_s"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#88000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />



    <TextView
            android:id="@+id/priceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/r_0_00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:background="@drawable/price_text_background"
            android:padding="16dp"
            android:elevation="8dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:shadowColor="#FF69B4"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>


    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />

    <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#22000000"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <TextView
            android:id="@+id/developerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desenvolvedor: João Igor"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

    <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versão 1.0"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif" />

    <TextView
            android:id="@+id/companyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa: AppTech"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium" />

</LinearLayout>




        </LinearLayout>
